<div class='row'>
<div class="col-4 py-2">
</div>

<div class="col-4 py-2">
      <div class='card '>



                    <h2>Edit <%= resource_name.to_s.humanize %></h2>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>


              <div class='mt-3 mb-3 ms-4' >
                      <div class="form-group mt-3">
                        <%= f.label :name %><br />
                        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
                      </div>

                      <div class="form-group mt-3">
                        <%= f.label :phone %><br />
                        <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
                      </div>

                      <div class="field mt-3">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                      </div>

                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                      <% end %>

                      <div class="field mt-5">
                        <%= f.label :password %> <i>(Deja en blanco si no lo quieres cambiar)</i><br />
                        <%= f.password_field :password, autocomplete: "new-password" %>
                        <% if @minimum_password_length %>
                          <br />
                          <em><%= @minimum_password_length %> characters minimum</em>
                        <% end %>
                      </div>

                      <div class="field mt-3">
                        <%= f.label :password_confirmation %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                      </div>

                      <div class="field mt-5">
                        <%= f.label :current_password %> <i>(Necesitamos tu actual contraseña para confirmar los cambios)</i><br />
                        <%= f.password_field :current_password, autocomplete: "Contraseña actual" %>
                      </div>

              </div>

                      <div class="actions mt-5 text-center">
                        <%= f.submit  "Actualizar" , class:  "btn btn-success" %>
                      </div>
                    <% end %>

                    <h3 class='mt-5 text-center'>Cancela mi Cuenta</h3>

                    <div class='mt-2 mb-3 text-center'>Estas insatifecho? <%= button_to "Finaliza tu cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

                    <div class='ms-4 mb-4'>
                        <%= link_to "Volver", :back %>
                    </div>


      </div>
</div>

<div class="col-4 py-2">
</div>


</div>